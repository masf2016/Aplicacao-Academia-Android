<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="academia.com.br.academia.PlayListActivity">

    <TextView
        android:text="@string/title_activity_play_list"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@drawable/play_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonPlay"
        android:layout_marginBottom="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <ImageButton
        android:background="@drawable/review_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonReview"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@drawable/stop_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonStop"
        android:layout_alignTop="@+id/imageButtonPlay"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@drawable/pause_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonPause"
        android:layout_alignTop="@+id/imageButtonStop"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <ImageButton
        android:background="@drawable/forward_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonForward"
        android:layout_alignTop="@+id/imageButtonPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:background="@drawable/headphone"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageView2"
        android:layout_above="@+id/imageButtonPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

</RelativeLayout>
